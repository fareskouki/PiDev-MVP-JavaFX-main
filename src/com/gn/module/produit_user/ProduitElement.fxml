         </HBox.margin>
      </ImageView>
      <VBox alignment="CENTER" style="-fx-padding: 10px;">
         <children>
            <Button fx:id="ajouter" mnemonicParsing="false" onAction="#ajouter" prefHeight="37.0" prefWidth="183.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;" text="Ajouter Panier" />
            <Label fx:id="id" style="-fx-font-weight: bold; -fx-font-size: 16px;" visible="false" />
         </children>
      </VBox>
   </children>
</HBox>
